.container {
  padding: 30rpx;
}

.card {
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  width: 100%;
  box-sizing: border-box;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.05);
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #f0f0f0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}
.status-0 { color: #07c160; background: rgba(7, 193, 96, 0.1); }
.status-1 { color: #1989fa; background: rgba(25, 137, 250, 0.1); }
.status-2 { color: #999; background: rgba(153, 153, 153, 0.1); }

.content {
  font-size: 30rpx;
  color: #555;
  line-height: 1.6;
  margin-bottom: 40rpx;
  min-height: 100rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
  border-top: 1px solid #f0f0f0;
  padding-top: 20rpx;
}

.actions {
  margin-top: 60rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.btn {
  width: 45%;
  font-size: 30rpx;
  border-radius: 40rpx;
}

.btn-finish {
  background: #07c160;
  color: #fff;
}

.btn-fail {
  background: #f5f5f5;
  color: #666;
}
