.container {
  padding: 30rpx;
  background: #fff;
  min-height: 100vh;
}

.form-group {
  margin-bottom: 40rpx;
  width: 100%;
}

.label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: bold;
}

.input {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.textarea {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  width: 100%;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 200rpx;
}

.picker {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.submit-btn {
  margin-top: 60rpx;
  width: 100%;
}
